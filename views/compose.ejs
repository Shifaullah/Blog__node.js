            <div class="container mt-3">
                <h2 class="text-center text-dark">Compose a new post</h2>
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <form action="/compose" class="form" method="post">
                            <label for="post_title">Post Title: <br></label>
                            <input type="text" id="post_title" name="post_title" class="form-control"><br>
                            <label for="post_desc">Post Descriptions: <br></label>
                            <textarea name="post_desc" id="post_desc" cols="30" rows="10" class="form-control"></textarea><br>
                            <button class="btn btn-outline-dark px-5">Publish</button>
                        </form>
                    </div>
                </div>
            </div>
