<%-include("header")-%> 
<%-include("navbar")-%> 
        <h2 class="text-center text-dark mt-3 mb-5">My Blog Posts</h2>
        
        <div class="container">
            <% if(!posts[0]) {%> 
                <h4 class="my-4 text-danger">No posts yet.</h4>
            <% } %>
            <div class="row">
                <% posts.map(post =>{%>
                    <div class="col-md-6">
                        <div class="card shadow-lg p-4 mb-3">
                            <h3 class="mb-3"><%= post.title%></h3>
                            <p><%= post.description.substr(0,100)%>
                                <% if(post.description.length >= 100){ %> 
                                     <a href="#" class="badge btn btn-outline-secondary">Read more</a>
                                <% } %> 
                            </p>
                        </div>
                    </div>
                <%  }) %>    
            </div>
        </div>
<%-include("footer")-%> 